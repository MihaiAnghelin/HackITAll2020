@page "/signin"

<form action="action_page.php" method="post" class="signin">
    <div class="imgcontainer">
        <img src="/Images/jeff-bezos-stonks-man-meme-fb-png__700.png" alt="Avatar" class="avatar" id="poza">
    </div>

    <div class="signincontainer">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required class="signininput">

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required class="signininput">

        <button type="submit" class="signinbutton">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>

    <div class="signincontainer" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn signinbutton" id="cancelbtn">Cancel</button>
        <span class="psw"><NavLink href="register">Register</NavLink></span>
    </div>
</form> 