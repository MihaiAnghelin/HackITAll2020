@inherits LayoutComponentBase
@inject IAuthenticationService AuthenticationService
@inject NavigationManager NavigationManager


<Layout Sider="true">

    <LayoutSider>
        <LayoutSiderContent>

            @if (AuthenticationService.User != null)
            {
                <Jumbotron Background="Background.Light">
                    <Heading>
                        No scam market
                    </Heading>
                    <Divider></Divider>
                    <Heading Size="HeadingSize.Is5">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <Figure Size="FigureSize.Is256x256" style="max-width:250px">
                                <FigureImage Source="images/img2.png" AlternateText="256x256" />
                            </Figure>
                        </NavLink>

                        <NavLink class="nav-link" href="counter" style="max-width:250px">
                            <FigureImage Source="images/img1.jpg" AlternateText="256x256" />
                        </NavLink>

                        @*<NavLink class="nav-link" href="fetchdata">
                                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                            </NavLink>*@

                    </Heading>
                </Jumbotron>
            }

        </LayoutSiderContent>
    </LayoutSider>


    <Layout>
        <LayoutContent>
            <Jumbotron Background="Background.Light">
                @Body
            </Jumbotron>
        </LayoutContent>
    </Layout>


</Layout>




@code{
    bool notcollapseNavMenu = true;
}